div.editpost
    div.code
        section.html
            div.title HTML
            textarea#html
        section.css
            div.title CSS
            textarea#css
        section.js
            div.title JAVASCRIPT
            textarea#javascript
    div.container.ib
      form.newpost(method="post")
        button.blue.save Save
        div.row
          input.title(type="text", name="title", id="editArticleTitle", value="", placeholder="Enter blog title")
        div.row
          input.tags(type="text", name="tags", id="editTags", value="", placeholder="Enter tags")
            // div.row
              span.label Summary&nbsp;
              textarea.contentText(name="body", rows=20, id="editArticleBody)
        div.ib
        iframe(width="100%", height="100%", id="main", name="result") 
- scripts.push('/js/editqp.js')
